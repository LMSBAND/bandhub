rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Band media files - any authenticated user can upload/read
    // (Firestore rules handle band membership checks for metadata)
    match /bands/{bandId}/media/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.size < 500 * 1024 * 1024; // 500MB max
    }
  }
}
